{
    "name": "Simple Key",
    "scopeName": "source.simkey",
    "patterns": [
        {
            "name": "entity.name.tag",
            "match": "<(SETTINGS|VECTORS|MODES|SWITCHES|FUNCS|MACRO|IMPORTS)>"
        },
        {
            "name": "keyword.control",
            "match": "\\@(if|elseif|else|repeat|goto|for|setIndex|setBool|set)"
        },
        {
            "name": "entity.name.function",
            "match": "\\@[a-zA-Z_]*"
        },
        {
            "name": "keyword.control",
            "match": "\\$\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
            "name": "constant.language.simkey",
            "match": "\\$[a-zA-Z0-9_]*"
        },
        {
            "name": "constant.numeric.simkey",
            "match": "\\b\\d+\\b"
        },
        {
            "name": "keyword.type",
            "match": "(BOOL|STR|NUM|VECTOR|LOOSE)"
        },
        {
            "name": "keyword.operator",
            "match": "(ON|OFF|=|TRUE|FALSE|OPTIONAL)"
        },
        {
            "name": "string.quoted.double.simkey",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "comment.simkey",
            "begin": "# ",
            "end": " #"
        }
    ],
    "fileTypes": ["simkey"],
    "foldingStartMarker": "\\{",
    "foldingStopMarker": "\\}"
}
